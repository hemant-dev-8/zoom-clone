{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@zoom/shared": [
                "packages/shared/src"
            ],
            "@zoom/proto": [
                "packages/proto/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}